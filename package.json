    "lint:js": "eslint . --ext js,jsx",
    "lint:sass": "",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.comcast.com:OSP/comcast.github.io.git"
  },
  "author": "Comcast_Open_Source_Services@comcast.com",
  "license": "Apache-2.0",
  "dependencies": {
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "next": "^10.0.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "swr": "^0.3.9",
    "webpack": "^4.20.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.12.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "react-svg-loader": "^3.0.3"
  },
  "husky": {
